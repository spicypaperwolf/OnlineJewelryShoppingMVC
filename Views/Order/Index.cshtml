@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_client.cshtml";
}

<div class="page-title fix">
    <!--Start Title-->
    <div class="overlay section">
        <h2>Checkout</h2>
    </div>
</div><!--End Title-->
<section class="checkout-page page fix">
    @ViewBag.cartid
    @ViewBag.inquiryid
    <!--Start Checkout Area-->
    @using (Html.BeginForm("Checkout", "Order", FormMethod.Post))
    {
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div class="panel-group" id="checkout-progress">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <a class="collapsed" data-toggle="collapse" data-parent="#checkout-progress" href="#bill-info"><span>1</span>BILLING INFORMATION</a>
                            </div>
                            <div id="bill-info" class="panel-collapse collapse">
                                <div class="panel-body">
                                    <div class="bill-info">
                                        <div class="group">
                                            <input type="text" name="fname" placeholder="First Name*" class="half" data-fname="fname" id="formFname">
                                            <input type="text" name="lname" placeholder="Last Name*" class="half" data-lname="lname" id="formLname">
                                        </div>
                                        <input type="text" name="address" placeholder="STREET ADDRESS*" data-street="street" id="formStreet">
                                        <input type="text" name="city" placeholder="city" data-city="city" id="formCity">
                                        <div class="group">
                                            <input type="text" name="state" placeholder="STATE / COUNTRY" data-country="country" id="formCountry">
                                        </div>
                                        <div class="group">
                                            <input type="text" name="email" placeholder="E-mail Address*" class="half" data-email="email" id="formEmail">
                                            <input type="text" name="mobNo" placeholder="PHONE NUMBER*" class="half" data-fone="fone" id="formFone">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <a class="collapsed" data-toggle="collapse" data-parent="#checkout-progress" href="#shipping-info"><span>2</span>SHIPPING INFORMATION</a>
                            </div>
                            <div id="shipping-info" class="panel-collapse collapse">
                                <div class="panel-body">
                                    <p>Yash Jewelery offers flat rate ground shipping for most orders shipped to the continental USA. Time to delivery can be up to eight business days, depending on your location. If you need faster delivery, choose UPS Ground or more expedited services.</p>
                                </div>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <a class="collapsed" data-toggle="collapse" data-parent="#checkout-progress" href="#shipping-method"><span>3</span>SHIPPING METHOD</a>
                            </div>
                            <div id="shipping-method" class="panel-collapse collapse">
                                <div class="panel-body">
                                    <p>Free shipping for order greater than $1000</p>
                                </div>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <a class="collapsed" data-toggle="collapse" data-parent="#checkout-progress" href="#payment-met"><span>4</span>PAYMENT INFORMATION</a>
                            </div>
                            <div id="payment-met" class="panel-collapse collapse">
                                <div class="panel-body">
                                    <div class="payment-met">
                                        <p>Choose your payment method :</p>
                                            <ul>
                                                <li><a href="#"><img src="~/assets/client/img/footer/paypal.jpg" alt="" /></a></li>
                                            </ul>
                                        <div class="pay">
                                            <h2>OR YOUR CARD NUMBER</h2>
                                            <p>Pay via credit or debit card, Paypal transfer or even via Bank account in just a few clicks.</p>
                                            <p>This method is super easy and well protected.</p>
                                            <div class="bill-info">
                                                <div class="group">
                                                    <input type="text" name="cardNo" placeholder="CARD NUMBER*" onkeypress="return checkDigit(event)">
                                                </div>
                                                <div class="group">
                                                    <input type="text" name="expDate" placeholder="EXP. DATE (MM/YY)*" class="half">
                                                    <input type="text" name="CVV" placeholder="CVV" class="half" maxlength="3">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <a class="collapsed" data-toggle="collapse" data-parent="#checkout-progress" href="#order-review"><span>5</span>ORDER REVIEW</a>
                            </div>
                            <div id="order-review" class="panel-collapse collapse">
                                <div class="panel-body">
                                    <div class="col-sm-4">
                                        <div class="information">
                                            <h3>BILLING INFORMATION</h3>
                                            <h4 id="showName" style="text-transform: uppercase;">Thomas Albert</h4>
                                            <h5 id="showAddress">Lorem Street 2178</h5>
                                            <p id="showCountry">12358 New Yourk</p>
                                            <h5 id="showFone">Phone : 123 456 789</h5>
                                            <p id="showEmail">E-mail: email@you,com</p>
                                            <a href="#">MODIFY</a>
                                        </div>
                                    </div>

                                    <div class="col-sm-4">
                                        <div class="information">
                                            <h3>SHIPPING INFORMATION</h3>
                                            <h4 id="showName1" style="text-transform: uppercase;">Thomas Albert</h4>
                                            <h5 id="showAddress1">Lorem Street 2178</h5>
                                            <p id="showCountry1">12358 New Yourk</p>
                                            <h5 id="showFone1">Phone : 123 456 789</h5>
                                            <p id="showEmail1">E-mail: email@you,com</p>
                                            <a href="#">MODIFY</a>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="information">
                                            <h3>PAYMENT METHOD</h3>
                                            <h4>Method : Card</h4>
                                            @*<p>Paypal address : email@you.com</p>*@
                                            <a id="shipping" href="#">MODIFY</a>
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="place-order">
                                            <div class="order-list">
                                                <h1>PRODUCTS</h1>
                                                <h2>Total</h2>
                                                @if (Session["cartList"] != null)
                                                {
                                                    foreach (CartList item in (List<CartList>)Session["cartList"])
                                                    {
                                                        <h3>@item.itemCode  x @item.qty <span>$@item.price</span></h3>
                                                    }
                                                }
                                            </div>
                                            <div class="final-total">
                                                <h4>Sub Total <span>$@ViewBag.TotalPrice</span></h4>
                                                <h5>Grand Total <span>$@ViewBag.TotalPrice</span></h5>
                                                <input type="submit" name="btnSubmit" value="Place Order" class="btn btn-border" style="background-color: #e09e25; color:#fff; font-weight:bold;"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="checkout-right">
                        <h2>CHECKOUT PROGRESS</h2>
                        <ul>
                            <li><a href="#">Billing  Information</a></li>
                            <li><a href="#">Shipping  Information</a></li>
                            <li><a href="#">Shipping  Method</a></li>
                            <li><a href="#">Payment Information</a></li>
                            <li><a href="#">Order Review</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    }

</section><!--End Checkout Area-->
<script>
    function checkDigit(event) {
    var code = (event.which) ? event.which : event.keyCode;

    if ((code < 48 || code > 57) && (code > 31)) {
        return false;
    }

        return true;
    }
    $(document).ready(function () {
        $('#bill-info').find('.group input').keyup(function () {
            $('#showName').text($('#formFname').val() + " " + $('#formLname').val());
            $('#showAddress').text($('#formStreet').val());
            $('#showCountry').text($('#formCountry').val());
            $('#showEmail').text($('#formEmail').val());
            $('#showFone').text($('#formFone').val());
            $('#showName1').text($('#formFname').val() + " " + $('#formLname').val());
            $('#showAddress1').text($('#formStreet').val());
            $('#showCountry1').text($('#formCountry').val());
            $('#showEmail1').text($('#formEmail').val());
            $('#showFone1').text($('#formFone').val());
        })
    });
    
</script>


