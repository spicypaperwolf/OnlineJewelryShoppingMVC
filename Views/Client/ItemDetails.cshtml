@model OnlineJewelryShoppingMVC.ItemMst


@{
    ViewBag.Title = "Item Details";
    Layout = "~/Views/Shared/_client.cshtml";
}

<div class="page-title fix">
    <!--Start Title-->
    <div class="overlay section">
        <h2>Product Details</h2>
    </div>
</div><!--End Title-->
<section class="product-page page fix">
    <!--Start Product Details Area-->
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="details-pro-tab">
                    <!-- Tab panes -->
                    <div class="tab-content details-pro-tab-content">
                        <div class="tab-pane fade in active" id="image-0">
                            <div class="simpleLens-big-image-container">
                                <a class="simpleLens-lens-image" data-lens-image="/assets/image/@Html.DisplayFor(m=>m.itemImg.Split(',')[0])">
                                    <img src="~/assets/image/@Html.DisplayFor(m=>m.itemImg.Split(',')[0])" alt="@Html.DisplayFor(m=>m.itemImg.Split(',')[0])" class="simpleLens-big-image">
                                </a>
                            </div>
                        </div>
                        @for (int i = 1; i < Model.itemImg.Split(',').Length; i++)
                        {
                            <div class="tab-pane fade" id="image-@i">
                                <div class="simpleLens-big-image-container">
                                    <a class="simpleLens-lens-image" data-lens-image="/assets/image/@Html.DisplayFor(m=>m.itemImg.Split(',')[i])">
                                        <img src="~/assets/image/@Html.DisplayFor(m=>m.itemImg.Split(',')[i])" alt="@Html.DisplayFor(m=>m.itemImg.Split(',')[i])" class="simpleLens-big-image">
                                    </a>
                                </div>
                            </div>
                        }
                        @*<div class="tab-pane fade" id="image-3">
                            <div class="simpleLens-big-image-container">
                                <a class="simpleLens-lens-image" data-lens-image="~/assets/client/img/single-product/3.jpg">
                                    <img src="~/assets/client/img/single-product/3.jpg" alt="" class="simpleLens-big-image">
                                </a>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="image-4">
                            <div class="simpleLens-big-image-container">
                                <a class="simpleLens-lens-image" data-lens-image="~/assets/client/img/single-product/4.jpg">
                                    <img src="~/assets/client/img/single-product/4.jpg" alt="" class="simpleLens-big-image">
                                </a>
                            </div>
                        </div>*@
                    </div>
                     <!--Nav tabs--> 
                    <ul class="tabs-list details-pro-tab-list" role="tablist">
                        @for (int i = 0; i < Model.itemImg.Split(',').Length; i++)
                        {
                            if (i <= 3 && i >= 0)
                            {
                                <li><a href="#image-@i" data-toggle="tab"><img src="~/assets/image/@Html.DisplayFor(m=>m.itemImg.Split(',')[i])" alt="@Html.DisplayFor(m=>m.itemImg.Split(',')[i])" /></a></li>
                            }
                        }
                        @*<li class="active"><a href="#image-1" data-toggle="tab"><img src="~/assets/client/img/single-product/thumb-1.jpg" alt="" /></a></li>
                        <li><a href="#image-2" data-toggle="tab"><img src="~/assets/client/img/single-product/thumb-2.jpg" alt="" /></a></li>
                        <li><a href="#image-3" data-toggle="tab"><img src="~/assets/client/img/single-product/thumb-3.jpg" alt="" /></a></li>
                        <li><a href="#image-4" data-toggle="tab"><img src="~/assets/client/img/single-product/thumb-4.jpg" alt="" /></a></li>*@
                    </ul>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="shop-details">
                    <!-- Product Name -->
                    <h2>@Html.DisplayFor(m => m.itemName)</h2>
                    <!-- Product Ratting -->
                    <div class="pro-ratting">
                        @*<i class="on fa fa-star"></i>
                        <i class="on fa fa-star"></i>
                        <i class="on fa fa-star"></i>
                        <i class="on fa fa-star"></i>
                        <i class="on fa fa-star-half-o"></i>*@
                    </div>
                    <h3>@*<span>$165</span>*@@Html.DisplayFor(m => m.MRP)</h3>
                    <h4>10 Reviews</h4>
                    <h5>Availability - <span>In Stock</span></h5>
                    <h6>QUICK OVERVIEW</h6>
                    <p>@Html.DisplayFor(m=>m.itemDescription)</p>
                    <div class="select-menu fix">
                        @*<div class="sort fix">
                            <h4>SIZE</h4>
                            <select>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                            </select>
                        </div>
                        <div class="sort fix">
                            <h4>Color</h4>
                            <select>
                                <option value="pink">pink</option>
                                <option value="red">red</option>
                                <option value="blue">blue</option>
                            </select>
                        </div>*@
                        <div class="sort fix">
                            <h4>Qty</h4>
                            <select id="qtyNumber">
                                @for (int i = 1; i <= 10; i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="review">
                        <textarea rows="4" placeholder="Write Your Review..."></textarea>
                    </div>
                    <div class="action-btn">
                        <a id="add-to-card" href="@Url.Action("Buy", "Cart", new { id = Model.itemCode})"><i class="fa fa-shopping-cart"></i></a>
                        <a href="#"><i class="fa fa-heart-o"></i></a>
                        <a href="#"><i class="fa fa-refresh"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 fix">
                <div class="description">
                    <!-- Nav tabs -->
                    <ul class="nav product-nav">
                        <li class="active"><a data-toggle="tab" href="#description">DESCRIPTION</a></li>
                        <li class=""><a data-toggle="tab" href="#review">REVIEWS</a></li>
                        <li class=""><a data-toggle="tab" href="#tags">PRODUCT INFORMATION</a></li>
                        @*<li class=""><a data-toggle="tab" href="#custom-tags">CUSTOM TABS</a></li>*@
                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div id="description" class="tab-pane fade active in" role="tabpanel">
                            <p>@Html.DisplayFor(m=>m.itemDescription)</p>
                        </div>
                        <div id="review" class="tab-pane fade" role="tabpanel">
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco aboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepte.</p>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamc.</p>
                        </div>
                        <div id="tags" class="tab-pane fade" role="tabpanel">
                            <div class="table-responsive">
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <th scope="row">@Html.DisplayNameFor(m => m.itemCode)</th>
                                            <td>@Html.DisplayFor(m => m.itemCode)</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">@Html.DisplayNameFor(m => m.itemName)</th>
                                            <td>@Html.DisplayFor(m => m.itemName)</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">@Html.DisplayNameFor(m => m.BrandMst.brandType)</th>
                                            <td>@Html.DisplayFor(m => m.BrandMst.brandType)</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">@Html.DisplayNameFor(m => m.CategoryMst.catName)</th>
                                            <td>@Html.DisplayFor(m => m.CategoryMst.catName)</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">@Html.DisplayNameFor(m => m.CertificateMst.certificateType)</th>
                                            <td>@Html.DisplayFor(m => m.CertificateMst.certificateType)</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">@Html.DisplayNameFor(m => m.ProductMst.prodType)</th>
                                            <td>@Html.DisplayFor(m => m.ProductMst.prodType)</td>
                                        </tr>

                                        <tr>
                                            <th scope="row">@Html.DisplayNameFor(m => m.GoldInfoMst.goldType)</th>
                                            <td>@Html.DisplayFor(m => m.GoldInfoMst.goldType)</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">@Html.DisplayNameFor(m => m.goldWt)</th>
                                            <td>@Html.DisplayFor(m => m.goldWt)</td>
                                        </tr>

                                        @if (Model.dimId != null && Model.dimQty != 0)
                                        {
                                            <tr>
                                                <th scope="row">@Html.DisplayNameFor(m => m.dimId)</th>
                                                <td>@Html.DisplayFor(m => m.dimId)</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">@Html.DisplayNameFor(m => m.dimQty)</th>
                                                <td>@Html.DisplayFor(m => m.dimQty)</td>
                                            </tr>
                                        }

                                        @if (Model.stoneId != null && Model.stoneQty != 0)
                                        {
                                            <tr>
                                                <th scope="row">@Html.DisplayNameFor(m => m.stoneId)</th>
                                                <td>@Html.DisplayFor(m => m.stoneId)</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">@Html.DisplayNameFor(m => m.stoneQty)</th>
                                                <td>@Html.DisplayFor(m => m.stoneQty)</td>
                                            </tr>
                                        }

                                        @if (Model.pairs != null)
                                        {
                                            <tr>
                                                <th scope="row">@Html.DisplayNameFor(m => m.pairs)</th>
                                                <td>@Html.DisplayFor(m => m.pairs)</td>
                                            </tr>
                                        }

                                        @if (Model.wstgPer != 0)
                                        {
                                            <tr>
                                                <th scope="row">@Html.DisplayNameFor(m => m.wstgPer)</th>
                                                <td>@Html.DisplayFor(m => m.wstgPer)</td>
                                            </tr>
                                        }

                                        @if (Model.wstg != 0)
                                        {
                                            <tr>
                                                <th scope="row">@Html.DisplayNameFor(m => m.wstg)</th>
                                                <td>@Html.DisplayFor(m => m.wstg)</td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                        @*<div id="custom-tags" class="tab-pane fade" role="tabpanel">
                            <a href="#">JEWELRY</a><a href="#">Necklaces</a><a href="#">Jewelry Sets</a><a href="#">Churi</a>
                        </div>*@
                    </div>
                </div>
            </div>
            <div class="col-md-12 fix">
                <div class="section-title">
                    <h2>RELATED PRODUCT</h2>
                    <div class="underline"></div>
                </div>
                <div class="related-pro-slider owl-carousel">
                    @foreach (var i in ViewBag.RelatedItem)
                    {
                        <!-- Single Product Start -->
                        <div class="product-item fix">
                            <div class="product-img-hover">
                                <!-- Product image -->
                                <a href="@Url.Action("ItemDetails", "Client", new { id = i.itemCode})" class="pro-image fix"><img src="~/assets/image/@i.itemImg.Split(',')[0]" alt="@i.itemImg.Split(',')[0]" /></a>
                                <!-- Product action Btn -->
                                <div class="product-action-btn">
                                    <a class="quick-view" href="#"><i class="fa fa-search"></i></a>
                                    <a class="favorite" href="#"><i class="fa fa-heart-o"></i></a>
                                    <a class="@Url.Action("Buy", "Cart", new { id = i.itemCode})" href="#"><i class="fa fa-shopping-cart"></i></a>
                                </div>
                            </div>
                            <div class="pro-name-price-ratting">
                                <!-- Product Name -->
                                <div class="pro-name">
                                    <a href="product-details.html">@i.itemName</a>
                                </div>
                                <!-- Product Ratting -->
                                <div class="pro-ratting">
                                    <i class="on fa fa-star"></i>
                                    <i class="on fa fa-star"></i>
                                    <i class="on fa fa-star"></i>
                                    <i class="on fa fa-star"></i>
                                    <i class="on fa fa-star-half-o"></i>
                                </div>
                                <!-- Product Price -->
                                <div class="pro-price fix">
                                    <p>@*<span class="old">$165</span>*@<span class="new">@i.MRP</span></p>
                                </div>
                            </div>
                        </div>
                        <!-- Single Product End -->
                    }
                </div>
            </div>
        </div>
    </div>
</section><!--End Product Details Area-->

<script>
    $( document ).ready(function() {
        console.log($('#qtyNumber').val());
        $('#add-to-card').click(function(){
            
        });
    });
</script>
